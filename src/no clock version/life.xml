<?xml version="1.0" encoding="ISO-8859-1"?>

<screensaver name="life" _label="Life">

  <command arg="--root"/>

  <video href="https://www.youtube.com/watch?v=6-i1eTjp4jQ"/>

  <number id="delay" type="slider" arg="--delay %"
          _label="Frame rate" _low-label="Low" _high-label="High"
          low="10000" high="1000000" default="100000"
          convert="invert"/>

  <number id="cellsize" type="spinbutton" arg="--cell-size %"
          _label="Cell size" low="1" high="100" default="10"/>
  
  <boolean id="showfps" _label="Show frame rate" arg-set="--fps"/>

  <xscreensaver-updater />

  <_description>
Game of life.

Written by Dmitrii Anastasiadi; 2024.
  </_description>
</screensaver>
